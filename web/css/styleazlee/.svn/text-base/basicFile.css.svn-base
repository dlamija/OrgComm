html, body {
 	margin: 0;
 	padding: 0;
 	background-color: #fff;
 	color: #000;
}

body {
 	width: 97%;
}

#header {
 	color: #000;
  background-color: #fff;
  padding-bottom: 20px;
}

#leftcol {
 	float: left;
 	width: 160px;
 	margin-left: 10px;
 	margin-top: 0;
 	color: #000;
  background-color: #dedfde;
 	padding: 3px;
}

#rightcol {
 	float: right;
 	width: 150px;
 	margin-right: 0;
 	margin-top: 0;
 	color: #000;
  background-color: #fff;
 	padding: 3px;
 	text-align: right;
}

#content {
  width: 550px;
 	margin-left: 210px;
  color: #000;
 	background-color: #fff;
}

#footer {
 	clear: both;
 	width: 95%;
 	margin: 10px;
 	text-align: center;
}

p {
 	font: .9em arial, sans-serif;
}


/* ============================= */

.comments {
  /* margin-top: 15px; */
  font: bold .8em arial, sans-serif;
  padding: 0 1em 1em 1em;
  border: 1px solid #BDBF00;
  color: inherit;
  background-color: #FFFFCC;
  width: 400px;
}

legend.main {
  font: bold 1em arial, sans-serif;
  margin-top: 1.5em;
  margin-bottom: 1.5em;
}

legend {
  font-weight: bold;
}

textarea {
  border: 1px solid #BDBF00;
  font: .9em arial, sans-serif;
  margin: 0;
  padding: 0;
}

textarea.tabber {
  border: 1px solid #BDBF00;
  font: .9em arial, sans-serif;
  margin: 0;
  padding: 0;
}

input {
  border: 1px solid #BDBF00;
}

input.not {
  display: none;
}

fieldset.signUp {
  margin: 1em 0;
  padding: 0 1em 1em 1em;
  border: 1px solid #BDBF00;
  background-color: #FFFFCC;
  color: #000;
}

#subscribe {
  text-align: center;
  width: 288px;
  font: bold .9em arial, sans-serif;
  margin-left : auto;
 	margin-right : auto;
}

#getScript {
  text-align: center;
  width: 288px;
  font: bold .9em arial, sans-serif;
  margin-left : auto;
 	margin-right : auto;
}

small {
